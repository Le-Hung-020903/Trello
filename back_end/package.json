{
  "name": "back-end",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "dev": "cross-env BUILD_MODE=dev nodemon --exec babel-node ./bin/www",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && cross-env BUILD_MODE=production node ./build/bin/www",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@getbrevo/brevo": "^2.2.0",
    "async-exit-hook": "^2.0.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "http-errors": "~1.6.3",
    "http-status-codes": "^2.3.0",
    "jade": "^1.9.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.11.0",
    "morgan": "~1.9.1",
    "ms": "^2.1.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.12.0"
  }
}
